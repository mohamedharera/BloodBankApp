<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamed.bank.DetailsDonationAsk">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/actionbar_color"
            android:theme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:text="طلب تبرع :"
                    android:layout_marginRight="115dp"
                    android:id="@+id/head_request"
                    android:gravity="center"
                    android:textColor="@color/text_bar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:textSize="18dp"
                    android:text=""
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/head_request"
                    android:id="@+id/requestname"
                    android:gravity="center"
                    android:textColor="@color/text_bar"/>

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/notify"/>

                <com.nex3z.notificationbadge.NotificationBadge
                    android:id="@+id/badge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@+id/imageView20"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/imageView20"
                    android:background="@drawable/notify" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:padding="10dp"
            android:background="@color/view"
            android:paddingLeft="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="12dp"
                        android:text="الاسم :"
                        android:id="@+id/head_name"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:textSize="18dp"
                        android:layout_toLeftOf="@+id/head_name"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="@color/text"/>
                </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="العمر :"
                    android:id="@+id/head_birth"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/birth"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_birth"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="فصيلة الدم :"
                    android:id="@+id/head_type"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/type"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_type"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="عدد الاكياس المطلوبه :"
                    android:id="@+id/head_bugs"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bugs"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_bugs"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="المستشفى :"
                    android:id="@+id/head_hospital"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hospital"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_hospital"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="عنوان المستشفى :"
                    android:id="@+id/head_address"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_address"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad7d7"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    android:text="رقم الجوال :"
                    android:id="@+id/head_phone"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@+id/head_phone"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/register_view_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="التفاصيل:"
                    android:id="@+id/head_details"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_below="@+id/head_details"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:id="@+id/detail"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"/>

            </RelativeLayout>

            <Button
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:text="اتصال"
                android:layout_weight="1"
                android:textColor="@color/view"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="#4CAF50"
                android:id="@+id/call"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
