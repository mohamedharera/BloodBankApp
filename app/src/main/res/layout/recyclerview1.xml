<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:background="@color/recyclerBackground"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recyclerBackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:id="@+id/relative_details">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/circle_shape">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:id="@+id/relative_text"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="A+"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/text"
                            android:id="@+id/blood_type"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:background="@drawable/circle_shape2"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/relative_text2"
                        android:layout_toLeftOf="@+id/relative_text">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="rtl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="اسم الحاله : "
                                android:textSize="15dp"
                                android:textColor="@color/text"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="مستشفى : "
                                android:textSize="15dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/text"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="المدينه : "
                                android:textSize="15dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/text"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/relative_text2"
                        android:gravity="right|center">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp"
                            android:layoutDirection="rtl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="احمد محمد احمد"
                                android:textSize="15dp"
                                android:id="@+id/name"
                                android:textColor="@color/text"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="القصر العينى"
                                android:id="@+id/hospital"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="@color/text"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="المنصوره"
                                android:id="@+id/country"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="@color/text"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="3dp">

                            <Button
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:text="التفاصيل"
                                android:textSize="15dp"
                                android:layout_margin="3dp"
                                android:textColor="@color/text"
                                android:background="@color/background"
                                android:id="@+id/details"/>
                            <Button
                                android:layout_width="110dp"
                                android:layout_height="40dp"
                                android:text="اتصال"
                                android:id="@+id/call"
                                android:textSize="15dp"
                                android:layout_marginTop="6dp"
                                android:background="#3bb640"
                                android:layout_margin="3dp"
                                android:textColor="@color/view" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>