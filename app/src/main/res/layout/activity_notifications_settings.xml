<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.bank.NotificationSettings.NotificationsSettings">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/actionbar_color"
            android:theme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:textSize="18dp"
                    android:text="اعدادات الاشعارات"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:textColor="@color/text_bar"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kind"
        android:padding="10dp"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/bloodRelative"
                    android:padding="10dp"
                    android:background="@drawable/border2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="فصيلة الدم"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text"
                        android:layout_marginLeft="5dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/bloodRelative"
                    android:gravity="center"
                    android:background="@drawable/border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/row1"
                        android:layout_marginLeft="25dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:weightSum="3">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="AB+"
                                   android:layout_alignParentLeft="true"
                                   android:layout_marginLeft="20dp"
                                   android:id="@+id/ABPositive"/>
                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="A-"
                                   android:layout_toRightOf="@+id/ABPositive"
                                   android:layout_marginLeft="40dp"
                                   android:id="@+id/ANegative"/>
                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="O+"
                                   android:layout_toRightOf="@+id/ANegative"
                                   android:layout_marginLeft="40dp"
                                   android:id="@+id/OPositive"/>
                           </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row1"
                        android:layout_marginLeft="25dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:weightSum="3">

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="AB-"
                                   android:layout_alignParentLeft="true"
                                   android:layout_marginLeft="20dp"
                                   android:id="@+id/ABNegative"/>
                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="A+"
                                   android:layout_toRightOf="@+id/ABNegative"
                                   android:layout_marginLeft="40dp"
                                   android:id="@+id/APositive"/>
                               <CheckBox
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="O-"
                                   android:layout_marginLeft="40dp"
                                   android:layout_toRightOf="@+id/APositive"
                                   android:id="@+id/ONegative"/>
                           </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kind"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/my_relative2"
                android:padding="10dp"
                android:background="@drawable/border2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المدينه"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"
                    android:layout_marginLeft="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_relative2"
                android:background="@drawable/border">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/recyclerview_checkbox">

                    </android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
